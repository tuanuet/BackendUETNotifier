<% layout('../layout') -%>
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <h4 class="page-title">Customers</h4>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">Admin</a>
                        </li>
                        <li>
                            <a href="#">Manage</a>
                        </li>
                        <li class="active">
                            <%= models[0].role%>
                        </li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-sm-8">
                                <form role="form">
                                    <div class="form-group contact-search m-b-30">
                                        <input type="text" id="search" class="form-control" placeholder="Search...">
                                        <button type="submit" class="btn btn-white"><i class="fa fa-search"></i></button>
                                    </div> <!-- form-group -->
                                </form>
                            </div>
                            <div class="col-sm-4">
                                <a href="#custom-modal" class="btn btn-default btn-md waves-effect waves-light m-b-30" data-animation="fadein" data-plugin="custommodal"
                                   data-overlaySpeed="200" data-overlayColor="#36404a" data-from="admin" id="btn-add-admin"><i class="md md-add"></i> Add Admin</a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover mails m-0 table table-actions-bar">
                                <thead>
                                <tr>
                                    <th>
                                        <div class="checkbox checkbox-primary checkbox-single">
                                            <input id="action-checkbox" type="checkbox">
                                            <label for="action-checkbox"></label>
                                        </div>
                                    </th>
                                    <th class="hidden">ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Created at</th>
                                    <th>Action</th>
                                </tr>
                                </thead>

                                <tbody>
                                <% models.forEach(function(model){ %>
                                <tr>
                                    <td>
                                        <div class="checkbox checkbox-primary">
                                            <input id="checkbox14" type="checkbox">
                                            <label for="checkbox14"></label>
                                        </div>
                                    </td>
                                    <td class="id hidden"><%= model.id %></td>
                                    <td class="name"><%= model.name %></td>
                                    <td class="email"><%= model.email %></td>
                                    <td>
                                        <%= model.createdAt%>
                                    </td>
                                    <td>
                                        <a href="#custom-modal" data-id=<%= model.id%> data-from="admin" class="table-action-btn btn-edit" data-animation="fadein" data-plugin="custommodal"
                                           data-overlaySpeed="200" data-overlayColor="#36404a"><i class="md md-edit open-modal-edit"></i></a>
                                        <a href="#dialog" data-id=<%= model.id%> data-from="admin" class="table-action-btn btn-delete" data-animation="fadein" data-plugin="custommodal"
                                           data-overlaySpeed="200" data-overlayColor="#36404a"><i class="md md-close"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
        </div> <!-- container -->

    </div> <!-- content -->
    <footer class="footer text-right">
        Â© 2017. All rights reserved.
    </footer>
</div>


<!-- Modal -->
<div id="custom-modal" class="modal-demo">
    <button type="button" class="close" onclick="Custombox.close();">
        <span>&times;</span><span class="sr-only">Close</span>
    </button>
    <h4 class="custom-modal-title">Edit</h4>
    <div class="custom-modal-text text-left">

        <form role="form" id="form_modal" method="post">
            <input type="hidden" name="id" id="form_id" value="">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="form-name" name="name" placeholder="Enter name">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="form-email" name="email" placeholder="Enter email">
            </div>

            <div class="form-group">
                <label for="position">Password</label>
                <input type="password" class="form-control" id="password_modal" name="password" placeholder="Enter password">
            </div>

            <div class="form-group">
                <label for="position">Confirm password</label>
                <input type="password" class="form-control" id="confirm_password_modal" name="confirmPassword" placeholder="Confirm password">
                <span id="warning-message"></span>
            </div>

            <button type="submit" data-from= id="add-admin" class="btn btn-default waves-effect waves-light">Save</button>
            <button type="button" class="btn btn-danger waves-effect waves-light m-l-10" onclick="Custombox.close();">Cancel</button>
            <span id="message"></span>
        </form>
    </div>
</div>


<!-- MODAL delete row-->
<div id="dialog" class="modal-demo">
    <button type="button" class="close" onclick="Custombox.close();">
        <span>&times;</span><span class="sr-only">Close</span>
    </button>
    <h4 class="custom-modal-title modal-delete">Edit</h4>
    <div class="custom-modal-text text-left">

        <form role="form" id="delete_modal" method="post">
            <input type="hidden" name="id" id="delete_id" value=""/>
            <h3>Are you sure to delete this row?</h3>
            <button type="submit" id="add-admin" class="btn btn-default waves-effect waves-light">Sure!</button>
            <button type="button" class="btn btn-danger waves-effect waves-light m-l-10" onclick="Custombox.close();">Let me think</button>
        </form>
    </div>
</div>
<script>

    $('.btn-edit').click(function () {
        var from = $(this).data('from');
        $('#form_modal').attr('action','/admin/manage/account?role=<%= models[0].role.toLocaleLowerCase() %>&_method=PUT');
        $('.custom-modal-title').html('Edit <%= models[0].role %>');
        var id = $(this).attr('data-id');
        $('#form_id').val(id);
        var name = $(this).parent().parent().find('.name').html();
        var email = $(this).parent().parent().find('.email').html();

        $('#form-name').val(name.trim());
        $('#form-email').val(email.trim());
    });


    $('#btn-add-admin').click(function () {
        resetForm();
        var from = $(this).attr('data-from');
        $('#form_modal').attr('action','/admin/manage/account?role=<%= models[0].role.toLocaleLowerCase() %>');
        $('.custom-modal-title').attr('method','post');
        $('#form-name').val('');
        $('#form-email').val('');
        $('#password_modal').val('');
        $('#confirm_password_modal').val('');
    });

    resetForm = function () {
        $('#warning-message').html('');
        $('#message').html('');
    };

    $('.btn-delete').click(function () {
        var from = $(this).attr('data-from');
        $('.modal-delete').html("Delete row");
        $('#delete_modal').attr('action','/admin/manage/account?role=<%= models[0].role.toLocaleLowerCase() %>&_method=DELETE');
        $('#delete_modal').attr('method','post');
        var id = $(this).attr('data-id');
        $('#delete_id').val(id);
    });
</script>
