<% layout('../layout') -%>
<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.7.5/css/froala_editor.pkgd.min.css')%>
<% stylesheet('https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.7.5/css/froala_style.min.css')%>
<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <!-- Page-Title -->
            <% const role = user.role === 'Department' ? 'Phòng ban' : (user.role === 'Faculty'? 'Khoa' : 'Admin' ) %>
            <div class="row">
                <div class="col-sm-12">
                    <h4 class="page-title"><%= role %></h4>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#"><%= role %></a>
                        </li>
                        <li>
                            <a href="#">Thông báo</a>
                        </li>
                        <li class="active">
                            Sinh viên
                        </li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="card-box">
                    <h4 class="m-t-0 header-title"><b>Send Annoucement for some students </b></h4>
                    <hr/>

                    <form action="/lecturer/announce/students" enctype="multipart/form-data" method="post" data-parsley-validate novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="title">Tiêu đề *</label>
                                    <input type="text" name="title" parsley-trigger="change" required placeholder="Enter title" class="form-control" id="title">
                                </div>

                                <div class="form-group">
                                    <label for="title">Mô tả ngắn *</label>
                                    <input type="text" name="description" parsley-trigger="change" required placeholder="Enter description" class="form-control" id="description">
                                </div>

                                <div class="form-group m-b-0">
                                    <label class="control-label">Tệp đính kèm </label>
                                    <input type="file" name="file" class="filestyle" data-placeholder="No file">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Loại thông báo
                                    </label>
                                    <select class="selectpicker show-tick" name="kindOfAnnouncement" data-style="btn-white">
                                        <% kindOfAnnouncement.forEach(function (item) {%>
                                        <option value="<%=item.id%>"><%= item.name%></option>
                                        <%})%>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>
                                        Mức độ khẩn cấp
                                    </label>
                                    <select class="selectpicker show-tick" name="priorityNotify" data-style="btn-white">
                                        <% priority.forEach(function (item) {%>
                                        <option value="<%=item.id%>"><%= item.name%></option>
                                        <%})%>
                                    </select>
                                </div>
                                <div class="form-group" style="margin-top: 25px">
                                    <label class="control-label">Ảnh minh họa</label>
                                    <input type="file" name="images" class="filestyle" multiple accept="image/*" data-placeholder="No file">
                                </div>

                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="link">Students code by separator (,) no space</label>
                                    <input id="link" name="students" type="text" placeholder="code,code,..." class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 m-b-0 p-0">
                            <div class="form-group">
                                <label for="content">Nội dung*</label>
                                <textarea name="content" parsley-trigger="change" required placeholder="Enter content" class="form-control" id="content"></textarea>
                            </div>
                        </div>
                        <div class="form-group text-right m-b-0">
                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                Submit
                            </button>
                            <button type="reset" class="btn btn-default waves-effect waves-light m-l-5">
                                Cancel
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div> <!-- container -->

    </div> <!-- content -->
    <footer class="footer text-right">
        © 2017. All rights reserved.
    </footer>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('form').parsley();
    });
</script>


